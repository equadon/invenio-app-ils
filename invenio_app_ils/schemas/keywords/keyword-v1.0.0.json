{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for Keyword",
  "type": "object",
  "required": ["$schema", "pid", "pid_type", "name"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "pid": {
      "type": "string",
      "title": "The persistent identifier of this Keyword"
    },
    "pid_type": {
      "type": "string",
      "title": "PID type"
    },
    "name": {
      "description": "The name of this Keyword",
      "type": "string"
    },
    "provenance": {
      "description": "Specifies the provenance of the keyword",
      "type": "string"
    }
  }
}
