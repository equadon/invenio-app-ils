{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Series",
  "type": "object",
  "required": ["$schema", "pid", "title", "mode_of_issuance"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "abstract": {
      "type": "string",
      "description": ""
    },
    "access_urls": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "access": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "value": {
            "format": "uri",
            "minLength": 1,
            "type": "string"
          }
        },
        "required": ["value"],
        "title": "URL of external resource",
        "type": "object"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "alternative_titles": {
      "description": "Alternative titles of the series",
      "items": [
        {
          "additionalProperties": false,
          "properties": {
            "value": {
              "minLength": 1,
              "type": "string"
            },
            "type": {
              "type": "string",
              "title": "Type of alternative title (Vocabulary)"
            }
          },
          "required": ["value"],
          "type": "object"
        }
      ],
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "authors": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "description": ""
    },
    "edition": {
      "type": "string",
      "description": "Edition"
    },
    "identifiers": {
      "items": {
        "properties": {
          "material": {
            "type": "string",
            "title": "Material to which the identifiers refers to."
          },
          "scheme": {
            "title": "Scheme of the identifier (Vocabulary)",
            "type": "string"
          },
          "value": {
            "title": "Value of the identifier",
            "type": "string"
          }
        },
        "required": ["value", "scheme"]
      },
      "title": "List of Identifiers of the record",
      "type": "array"
    },
    "internal_notes": {
      "title": "Internal notes",
      "type": "string"
    },
    "languages": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "title": "List of languages of the series (Vocabulary)",
      "description": ""
    },
    "mode_of_issuance": {
      "title": "Mode of issuance",
      "type": "string",
      "enum": ["MULTIPART_MONOGRAPH", "SERIAL"],
      "description": ""
    },
    "notes": {
      "title": "Note for the public",
      "type": "string"
    },
    "publisher": {
      "title": "Publisher name",
      "type": "string"
    },
    "relations_metadata": {
      "type": "object",
      "title": "Metadata to describe relations",
      "properties": {
        "multipart_monograph": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pid": {
                "type": "string"
              },
              "pid_type": {
                "type": "string"
              },
              "volume": {
                "type": "string"
              }
            }
          }
        },
        "serial": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pid": {
                "type": "string"
              },
              "pid_type": {
                "type": "string"
              },
              "volume": {
                "type": "string"
              }
            }
          }
        },
        "other": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pid": {
                "type": "string"
              },
              "pid_type": {
                "type": "string"
              },
              "note": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "relations": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string"
        }
      }
    },
    "pid": {
      "title": "Series PID",
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "urls": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "value": {
            "format": "uri",
            "minLength": 1,
            "type": "string"
          }
        },
        "required": ["value"],
        "title": "URL of external resource",
        "type": "object"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    }
  }
}
